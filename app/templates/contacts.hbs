<h1>Contacts</h1>

<ul class="list-group">
  {{#each model as |item|}}
      <li class="list-group-item">{{item.name}}

        {{#if isShowingPhoneNumber}}
          {{item.phone}}
        {{/if}}

      </li>
  {{/each}}
</ul>

<button {{action "toggleShowPhoneNumber"}} class="btn {{if isShowingPhoneNumber 'btn-danger' 'btn-success'}}">
    {{if isShowingPhoneNumber 'Hide Phone Number' 'Show Phone Number'}}
</button>