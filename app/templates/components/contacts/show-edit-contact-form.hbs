<form class="form-horizontal">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name:</label>
        <div class="col-sm-10">
          {{#if isEditing}}
            {{input id="name" type="text" value=name size="100" placeholder="Enter a new name" class="form-control"}}
          {{else}}
            <div class="form-control">
              {{name}}
            </div>
          {{/if}}

        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Phone:</label>
        <div class="col-sm-10">
          {{#if isEditing}}
            {{phone-input type="text" value=phone size="20" placeholder="Phone ex. 234-221-332" class="form-control"}}
          {{else}}
            <div class="form-control">
              {{phone}}
            </div>
          {{/if}}
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-10">
          {{#if isEditing}}
            {{input type="text" value=email size="100" placeholder="Email" class="form-control"}}
          {{else}}
            <div class="form-control">
              {{email}}
            </div>
          {{/if}}
        </div>
    </div>

    {{#if isEditing}}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-warning" {{action 'buttonClicked'}} disabled={{nothingThere}}>{{submitButtonLabel}}</button>
            </div>
        </div>
    {{/if}}
</form>